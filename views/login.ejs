<% layout("layouts/boilerplate") -%>
        <div class="row justify-content-center">
            <div class="card text-center col-10 col-md-6 col-xl-4 mt-3">
                <div class="card-header">
                    <h5 class="card-title">SIGN IN</h5>
                </div>
                <div class="card-body">
                    <form action="/login" id="form" method="post" novalidate>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" name="username" placeholder="username"
                                required>
                            <label for="username">User Name</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="pass" name="password" placeholder="Password"
                                required>
                            <label for="password">Password</label>
                        </div>
                        <div>
                            <button class="btn btn-primary mt-3" id="loginbtn">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    create new account? <a href="/register">sign up</a>
                </div>
            </div>
        </div>
        <script src="javascript/login.js"></script>
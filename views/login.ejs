<% layout("layouts/boilerplate") -%>
    <div class="container">
        <div class="row justify-content-center">
            <div class="card text-center col-9 col-sm-6 col-md-4 col-xl-3 m-3">
                <div class="card-header">
                    <h5 class="card-title m-2">SIGN IN</h5>
                </div>
                <div class="card-body">
                    <form action="/login" id="form" method="post" novalidate class="need-validate">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" autofocus id="username" name="username"
                                placeholder="username" required>
                            <label for="username">User Name</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="pass" name="password" placeholder="Password"
                                required>
                            <label for="password">Password</label>
                        </div>
                        <div>
                            <button class="btn btn-primary mt-3" id="loginbtn">Sign In</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    create new account? <a href="/register">sign up</a>
                </div>
            </div>
        </div>
    </div>
    <script src="javascript/login.js"></script>